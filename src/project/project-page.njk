---
layout: layouts/base-layout.njk
templateClass: tmpl-post
pagination:
  data: projects
  size: 1
  alias: project
permalink: project/{{ project.slug }}/index.html
---
{% block content %}
<div class="container">
  <div class="mt-4 bg-white py-3 px-md-5 rounded">
    <h1>{{ project.title }}</h1>
    <p><time datetime="{{ project.date | dateIso }}">{{ project.date | dateReadable }}</time></p>
    <ul class="mt-3">
      {% for tech in project.technologies %}
        <img src="{{tech.logo.url}}" alt="{{tech.logo.alternativeText}}" title="{{tech.logo.alternativeText}}"/>
      {% endfor %}
    </ul>

    <h2>Source code</h2>
    <p>
      <a href="{{ project.github }}">{{ project.title }} on github</a>
    </p>
    {% markdown %}{{ project.description | safe }}{% endmarkdown %}  
  </div>
</div>
{% endblock %}