---
layout: /layouts/base-layout.njk
---
<div class="row">
  <div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2">
    <article class="article">
      <h1>{{ title }}</h1> 
      <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time> 
      <div class="mt-5 bg-white p-2 rounded">
        {{ content | safe }}
      </div>
    </article>
  </div>
</div>