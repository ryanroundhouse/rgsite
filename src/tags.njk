---
layout: layouts/base-layout.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---
<h1>{{ tag }}</h1>

{% set taglist = collections[ tag ] %}
<div class="row m-0 mx-n3">
  {% for post in taglist | reverse %}
    <article class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mb-4">
      <div class="three-row-aligned h-100 bg-white p-2 text-center rounded">
        <div>
          <a class="h1" href="{{ post.url | url }}">{{ post.data.title }}</a><br/>
          <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
        </div>
        <div class="align-self-end">
          <p>{% excerpt post %}</p>
        </div>
        <a href="{{ post.url | url }}" aria-label="Read more on {{ post.data.title }}">Read more</a>
      </div>
    </article>
  {% endfor %}
</div>